<div class="container">
    <div class="row vertical-offset-80">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row-fluid user-row">
                        <img src="images/multiroom_chat_2.png" class="img-responsive" alt="Multiroom Chat"/>
                    </div>
                </div>
                <div class="panel-body">
                    <form role="form" class="form-signin" method="post" action="/chat">
                        <fieldset>
                            <label class="panel-login">
                                <div class="login_result"></div>
                            </label>
                            <input class="form-control" placeholder="Nome ou apelido" name="apelido" type="text" required="required">
                            <br></br>
                            <input class="btn btn-lg btn-success btn-block" type="submit" value="Entrar Â»">
                        </fieldset>
                    </form>
                    <%if (validacao !=null) {%>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-danger">
                                <ul>
                                    <%for (var i = 0; i < validacao.errors.length; i++) {%>
                                    <li><%=validacao.errors[i].msg%></li>
                                    <%}%>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <%}%>
                </div>
            </div>
        </div>
    </div>
</div>